<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asistencia.Materias"
             Title="Materias"
             BackgroundColor="White">


    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            >

            <Image Source="libros.png" HeightRequest="150" WidthRequest="150"/>

            <VerticalStackLayout>
                <Label Text="WELCOME" FontSize="28" TextColor="Gray" HorizontalTextAlignment="Center"/>
                <Label Text="PAGE TO REGISTER SUBJECT" FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <StackLayout Orientation="Horizontal">
                <Frame HeightRequest="45" Margin="-25, 0, 0,5" Padding="0" HasShadow="True" BorderColor="White" HorizontalOptions="FillAndExpand">
                    <Entry x:Name="claveMateria" TextColor="Black" Margin="25, 0, 0, 0" VerticalOptions="Center" Placeholder="SUBJECT CODE" Keyboard="Default"/>
                </Frame>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Frame HeightRequest="45" Margin="-25, 0, 0, 5" Padding="0" HasShadow="True" BorderColor="White" HorizontalOptions="FillAndExpand">
                    <Entry x:Name="subjectName" TextColor="Black" Margin="25, 0, 0, 0" VerticalOptions="Center" Placeholder="SUBJECT NAME" Keyboard="Default" IsPassword="False"/>
                </Frame>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Frame HeightRequest="45" Margin="-25, 0, 0, 5" Padding="0" HasShadow="True" BorderColor="White" HorizontalOptions="FillAndExpand">
                    <Entry x:Name="credito" TextColor="Black" Margin="25, 0, 0, 0" VerticalOptions="Center" Placeholder="CR" Keyboard="Default" IsPassword="False"/>
                </Frame>
            </StackLayout>

            <Button Text="REGISTER SUBJECT" HorizontalOptions="Center" BackgroundColor="Blue" WidthRequest="100" CornerRadius="20" Clicked="Button_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>


</ContentPage>